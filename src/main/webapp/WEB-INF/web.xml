<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>StockPulse Inventory System</display-name>
    <description>A professional inventory management system</description>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session timeout (30 minutes) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.stockpulse.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/inventory</url-pattern>
        <url-pattern>/suppliers</url-pattern>
        <url-pattern>/dashboard.jsp</url-pattern>
        <url-pattern>/inventory.jsp</url-pattern>
        <url-pattern>/suppliers.jsp</url-pattern>
        <url-pattern>/reports</url-pattern>
        <url-pattern>/reports.jsp</url-pattern>
        <url-pattern>/categories</url-pattern>
        <url-pattern>/categories.jsp</url-pattern>
        <url-pattern>/users</url-pattern>
        <url-pattern>/users.jsp</url-pattern>
    </filter-mapping>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.stockpulse.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.stockpulse.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Dashboard Controller -->
    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>com.stockpulse.controller.DashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Inventory Controller -->
    <servlet>
        <servlet-name>InventoryController</servlet-name>
        <servlet-class>com.stockpulse.controller.InventoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InventoryController</servlet-name>
        <url-pattern>/inventory</url-pattern>
    </servlet-mapping>

    <!-- Supplier Controller -->
    <servlet>
        <servlet-name>SupplierController</servlet-name>
        <servlet-class>com.stockpulse.controller.SupplierController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SupplierController</servlet-name>
        <url-pattern>/suppliers</url-pattern>
    </servlet-mapping>

    <!-- Report Controller -->
    <servlet>
        <servlet-name>ReportController</servlet-name>
        <servlet-class>com.stockpulse.controller.ReportController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportController</servlet-name>
        <url-pattern>/reports</url-pattern>
    </servlet-mapping>

    <!-- Category Controller -->
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>com.stockpulse.controller.CategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>

    <!-- User Controller -->
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.stockpulse.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <!-- Image Upload Controller -->
    <servlet>
        <servlet-name>ImageUploadController</servlet-name>
        <servlet-class>com.stockpulse.controller.ImageUploadController</servlet-class>
        <multipart-config>
            <max-file-size>5242880</max-file-size>
            <max-request-size>10485760</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageUploadController</servlet-name>
        <url-pattern>/upload-image</url-pattern>
    </servlet-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>

</web-app>
